@model Board

<form method="post">
    <div class="border border-light p-2">
        <input type="hidden" asp-for="BoardId" />
        <div class="m-3 mb-0">
            <label class="form-label m-2"><h2>@Model.Title</h2></label>
            <div>
                <div>
                </div>
                <div>
                    <label class="form-label">@Model.CreateDate.ToString("yyyy.MM.dd.")</label>
                </div>
            </div>
        </div>

        <div class="border-top border-bottom m-3 mt-0 p-3 ">
            <label class="form-label">@Model.Contents</label>
        </div>

        @{
            if(Model.Comments is not null)
            {
                @foreach(var item in Model.Comments)
                {
                    <div class="border-bottom m-3 mt-0 p-2 pt-0">
                        <label class="form-label">@item.Contents</label>
                    </div>
                }
            }
        }

        <div class="m-3 text-end">
            <textarea class="form-control" name="CommentContent" placeholder="댓글을 입력하세요."></textarea>
            <input class="btn btn-secondary mt-1" type="submit" value="등록" />
        </div>
    </div>

    <div class="mt-2 row">
        <div class="col-10">
            <a type="submit" asp-controller="Board" asp-action="Edit" asp-route-id="@Model.BoardId" class="btn btn-primary">수정</a>
            <input type="submit" value="삭제" asp-controller="Board" asp-action="Delete" class="btn btn-primary" />
        </div>
        <div class="col-2 text-end">
            <a asp-controller="Board" asp-action="Index" class="btn btn-primary">목록</a>
        </div>
    </div>
</form>